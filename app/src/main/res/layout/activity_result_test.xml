<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/azure"
        android:gravity="center_horizontal"
        tools:context=".startPage.student_page.result_test_page.ResultTestActivity">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/result_test_activity_result_text"
                    android:textSize="30sp"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_text_style"
                    android:layout_marginTop="30dp"
            />
            <TextView
                    android:id="@+id/result_test_activity_result_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="60sp"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_text_style"
                    android:layout_marginTop="150dp"
                    android:textColor="#F50B0B"
            />
            <Button
                    android:id="@+id/result_test_activity_go_to_mainPage_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_style"
                    android:layout_marginTop="130dp"
                    android:text="@string/result_test_activity_go_to_main_page_btn"
                    android:layout_gravity="center"
            />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>