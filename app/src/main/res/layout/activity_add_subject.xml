<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/azure"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".startPage.teacher_page.add_subject_page.AddSubjectActivity">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <EditText
                    android:id="@+id/add_subject_activity_name_of_subject_et"
                    android:background="@drawable/edit_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Name of Subject"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="150dp"
                    android:textSize="30sp"
            />
            <Button
                    android:id="@+id/add_subject_activity_add_subject_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_style"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:text="Add subject"
            />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>